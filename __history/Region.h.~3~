//---------------------------------------------------------------------------

#ifndef RegionH
#define RegionH

//---------------------------------------------------------------------------

class TRegion
{
private:
	AnsiString FName;
	AnsiString FTrackName;
	int FStartFrame;
	int FStopFrame;
	int FLength;
	bool FIsMono;

public:
	TRegion
	(
		const AnsiString Name,
		const AnsiString TrackName,
		const int StartFrame,
		const int StopFrame,
		const int Length,
		const bool IsMono
	);
};

//---------------------------------------------------------------------------

#endif

